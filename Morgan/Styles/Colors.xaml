<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Morgan">

    <!-- APP THEME COLORS -->
    
    <Color x:Key="ColorSecondary">#01579b</Color>
    <SolidColorBrush x:Key="ColorSecondaryBrush" Color="{StaticResource ColorSecondary}"/>

    <Color x:Key="ColorPrimary">#0277bd</Color>
    <SolidColorBrush x:Key="ColorPrimaryBrush" Color="{StaticResource ColorPrimary}"/>

    <!-- BACKGROUND COLORS -->
    
    <Color x:Key="BackgroundVeryDark">#252525</Color>
    <SolidColorBrush x:Key="BackgroundVeryDarkBrush" Color="{StaticResource BackgroundVeryDark}"/>

    <Color x:Key="BackgroundDark">#333333</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    
    <!-- FOREGROUND COLORS -->
    
    <Color x:Key="ForegroundLight">#f4f4f4</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}"/>

</ResourceDictionary>