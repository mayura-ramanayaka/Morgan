<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Morgan">

    <!-- Font used in the Window Control Buttons -->
    <FontFamily x:Key="LatoThin">pack://application:,,,/Fonts/#Lato Thin</FontFamily>
    
    <!-- Icon Font -->
    <FontFamily x:Key="Ionicons">Ionicons, pack://application:,,,/Fonts/#Ionicons</FontFamily>

    <!-- Megrim Font which is used for special headings -->
    <FontFamily x:Key="Megrim">pack://application:,,,/Fonts/#Megrim</FontFamily>

    <!-- Primary Font -->
    <FontFamily x:Key="FontPrimary">pack://application:,,,/Fonts/#Apercu</FontFamily>
    <FontFamily x:Key="FontPrimaryLight">pack://application:,,,/Fonts/#Apercu Light</FontFamily>

</ResourceDictionary>