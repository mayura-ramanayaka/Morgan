<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Morgan">

    <!-- Font used in the Window Control Buttons -->
    <FontFamily x:Key="LatoThin">pack://application:,,,/Fonts/#Lato Thin</FontFamily>
    
    <!-- Icon Font -->
    <FontFamily x:Key="Ionicons">pack://application:,,,/Fonts/#Ionicons</FontFamily>
    
    <!-- Calibri Font -->
    <FontFamily x:Key="CalibriRegular">pack://application:,,,/Fonts/#Calibri</FontFamily>
    <FontFamily x:Key="CalibriLight">pack://application:,,,/Fonts/#Calibri Light</FontFamily>

</ResourceDictionary>