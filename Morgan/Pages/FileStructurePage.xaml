<Page x:Class="Morgan.FileStructurePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Morgan"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="FileStructurePage">

    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextBlock.Foreground="{StaticResource ForegroundLightBrush}"
                    TextBlock.FontSize="40">

            <TextBlock Text="Scanned Locations"
                       FontSize="20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="{Binding LocationCount, FallbackValue=99}"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <TextBlock Text="Scanned Music Files"
                       FontSize="20"
                       Margin="0 20 0 0"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="{Binding MusicFileCount, FallbackValue=88}"
                       HorizontalAlignment="Center"/>

        </StackPanel>

    </Grid>
    
</Page>
