<local:BasePage x:Class="Morgan.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Morgan"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500"
      Title="SettingsPage">

    <Grid TextBlock.FontFamily="{StaticResource NunitoLight}">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text=""
                   Style="{StaticResource SpinnerOnLoadText}"
                   FontFamily="{StaticResource Ionicons}"
                   FontSize="70"
                   Foreground="{StaticResource ColorPrimaryBrush}"/>

            <TextBlock Text="Ooops!"
                   HorizontalAlignment="Center"
                   FontSize="25"
                   Foreground="{StaticResource ForegroundLightBrush}"/>

            <TextBlock Text="Sorry! This function isn't implemented yet."
                       Foreground="{StaticResource ForegroundDarkBrush}"
                       FontSize="14" Margin="0 5 0 0"/>

        </StackPanel>

    </Grid>
    
</local:BasePage>
